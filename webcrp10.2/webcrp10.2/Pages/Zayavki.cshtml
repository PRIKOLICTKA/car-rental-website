                @section Scripts {
                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                    <script>
                        $(document).ready(function () {
                            function filterApplications(status) {
                                var filteredCards;
                                var message;

                                if (status === "new") {
                                    filteredCards = $(".card").filter(function () {
                                        var cardStatus = $(this).data("status");
                                        return cardStatus === "Новые" || cardStatus === "Рассматривается" || cardStatus === "Одобрена";
                                    });
                                    message = "#no-new-applications-message";
                                } else if (status === "closed") {
                                    filteredCards = $(".card").filter(function () {
                                        // return $(this).data("status") === "Закрытая";
                                        var cardStatus = $(this).data("status");
                                        return cardStatus === "Закрытые" || cardStatus === "Закрыта";

                                    });
                                    message = "#no-closed-applications-message";
                                } else {
                                    filteredCards = $(".card");
                                    message = "#no-applications-message";
                                }

                                $(".card").hide();
                                $(".no-applications").hide();  // Скрыть все сообщения

                                if (filteredCards.length > 0) {
                                    filteredCards.show();
                                } else {
                                    $(message).show();
                                }
                            }

                            $('#status').on('change', function () {
                                var selectedStatus = $(this).val();
                                filterApplications(selectedStatus);
                            });

                            // Фильтрация по умолчанию при загрузке страницы
                            filterApplications('new');
                        });
                    </script>
