        .car-details-tooltip {
            display: none;
            position: absolute;
            bottom: 100%; /* Position the tooltip above the item */
            left: 50%;
            transform: translateX(-50%);
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 0px;
            padding: 10px;
            /*     box-shadow: 0px 3px 10px grey; */
            z-index: 3;
            width: 800px; /* Увеличение ширины */
        }

             .car-details-tooltip::before {
                        content: '';
                        position: absolute;
                        top: 100%;
                        left: 50%;
                        transform: translateX(-50%);
                        border-width: 8px;
                        border-style: solid;
                        border-color: #ccc transparent transparent transparent;
              } 


        .car-details-tooltip {
            display: block;
        }

        .left-details,
